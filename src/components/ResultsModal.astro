---
import CopyToClipboardButton from "./CopyToClipboardButton.astro";

const { title, dialogId, resultDivId } = Astro.props;
---

<dialog
  id={dialogId}
  class="bg-slate-700 lg:border-2 border-slate-600 rounded-lg lg:w-2/5 w-full backdrop-blur-sm shadow-lg block opacity-0 open:opacity-100 left-0 right-0 mt-24 lg:my-auto overflow-y-hidden open:h-full lg:open:h-auto"
>
  <div class="flex flex-col justify-center text-center text-slate-200 w-full">
    <!-- Header -->
    <div
      id="header"
      class="text-2xl tracking-wider my-4 font-semibold flex flex-row justify-between px-4"
    >
      <button type="button" onclick={dialogId + ".close()"} class="pt-2">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="currentColor"
          class="h-8 w-8 text-stone-400 hover:text-stone-200 transition-all duration-200 ease-in-out"
          viewBox="0 0 16 16"
        >
          <path
            d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"
          ></path>
          <path
            d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"
          ></path>
        </svg>
      </button>
      <h1 class="my-auto">{title}</h1>
      <div class="">
        <div class="h-10 w-10">
          <CopyToClipboardButton />
        </div>
      </div>
    </div>
    <!-- Result block -->
    <div
      id={resultDivId}
      class="lg:text-medium text-lg tracking-wide lg:mt-5 mt-10 mb-10"
    >
    </div>
  </div>
</dialog>

<style>
  dialog:modal {
    max-width: 100vw;
  }
  dialog::backdrop {
    backdrop-filter: blur(2px);
    background-color: rgba(0, 0, 0, 0.5);
  }
  dialog {
    transform: translateY(100%);
    transition: all 0.5s ease-in-out;
  }
  dialog[open] {
    transform: translateY(0);
    transition: all 0.5s ease-in-out;
  }
</style>
