---
import CopyToClipboardButton from "./CopyToClipboardButton.astro";

const { title, dialogId, resultDivId } = Astro.props;
---

<dialog
  id={dialogId}
  class="bg-slate-700 lg:border-2 border-slate-600 rounded-lg lg:w-2/5 w-full"
>
  <div class="flex flex-col justify-center text-center text-slate-200">
    <!-- Header -->
    <div id="header" class="text-2xl tracking-wider my-4 font-semibold">
      <h1>{title}</h1>
      <div class="flex flex-row w-full justify-end absolute top-0.5 pe-6">
        <div class="h-10 w-10">
          <CopyToClipboardButton />
        </div>
      </div>
    </div>
    <!-- Result block -->
    <div id={resultDivId} class="text-medium tracking-wide">
      736 355 604 289 327 168 150 115 72
    </div>
    <!-- Close button -->
    <div>
      <button
        id="close"
        onclick={dialogId + ".close()"}
        class="px-4 py-2 my-4 text-sm font-semibold text-white bg-slate-700 rounded-lg hover:bg-slate-600"
      >
        Close
      </button>
    </div>
  </div>
</dialog>
