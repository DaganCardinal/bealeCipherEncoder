---
import Layout from "../layouts/Layout.astro";
import KeyOptions from "../components/KeyOptions.astro";
import SimpleButton from "../components/SimpleButton.astro";
import FormOptions from "../components/FormOptions.astro";
import ResultsModal from "../components/ResultsModal.astro";
---

<Layout pageTitle="Beale Cipher Encoder">
  <div class="mt-20 lg:mx-48 mx-3 text-lg font-medium text-slate-200">
    <!-- Form section headers -->
    <div
      class="flex flex-row text-slate-200 text-2xl font-semibold justify-between lg:mx-36 my-12 mx-8"
    >
      <h2 id="formHeader" class="text-slate-400">Message</h2>
      <h2 id="formHeader">Key</h2>
      <h2 id="formHeader">Options</h2>
    </div>
    <form action="" id="encoderForm">
      <!-- Message section -->
      <div id="formSection">
        <p>Enter the message you would like to encode</p>
        <textarea
          name="message"
          id="message"
          cols="30"
          rows="10"
          class="w-full h-48 border-2 border-slate-200 rounded-md p-2 bg-slate-600 my-6"
        ></textarea>
      </div>
      <!-- Key section -->
      <div id="formSection">
        <p>Select the key you would like to use to encode your message</p>
        <KeyOptions />
      </div>
      <!-- Options section -->
      <div id="formSection">
        <p>Choose options for encoding your message</p>
        <p class="italic my-3 text-sm">
          By default, the encoder will replace new line characters and other
          formatting characters with spaces
        </p>
        <FormOptions />
      </div>
      <!-- Buttons -->
      <div class="flex justify-between">
        <SimpleButton buttonText="Previous" buttonId="prevButton" />
        <SimpleButton buttonText="Next" buttonId="nextButton" />
      </div>
    </form>
  </div>
  <ResultsModal
    title="Encoded Message"
    dialogId="encoderResultDialog"
    resultDivId="encoderResults"
  />
</Layout>

<script src="../scripts/encoderPageScript.ts"></script>
